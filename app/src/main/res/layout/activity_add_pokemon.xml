<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddPokemonActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/Setting_appbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.Toolbar
                android:id="@+id/setting_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_arrow_back_black_24dp"
                           android:contentDescription="@string/just"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/add_pokemon"
                          android:textColor="@color/md_white_1000"
                          android:textSize="15sp"
                          android:layout_marginStart="15dp"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Setting_appbar">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/PicPokemonAdd"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pokeball"
                    android:layout_marginTop="20dp"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/click"
                      android:textColor="@color/normal_lighter"
                      android:textStyle="italic"
                      android:textSize="10sp"
                      android:gravity="center"
                      android:layout_below="@id/PicPokemonAdd"
                      android:id="@+id/TxtImgHint"
                      android:layout_marginTop="10dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_below="@id/TxtImgHint"
                          android:id="@+id/LinearMainData">
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokedexNoAdd"
                        android:hint="@string/new_pokedex_number"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                />
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokemonNameAdd"
                        android:hint="@string/new_pokedex_name"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="20dp"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/LinearType"
                          android:layout_below="@id/LinearMainData"
                          android:textAlignment="center"
                          android:gravity="center">
                <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/LinearMainData"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/type1"
                        android:textSize="10sp"
                />
                <com.jaredrummler.materialspinner.MaterialSpinner

                        android:id="@+id/spinner2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type2"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                />
            </LinearLayout>

            <EditText
                    android:background="@drawable/rounded_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/TxtPokemonSpeciesAdd"
                    android:layout_below="@+id/LinearType"
                    android:hint="@string/new_pokedex_species"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:paddingLeft="20dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear1"
                    android:layout_below="@id/TxtPokemonSpeciesAdd"
                    android:textAlignment="center"
                    android:gravity="center">
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:id="@+id/TxtPokemonHeightAdd"
                        android:hint="Height"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:id="@+id/TxtPokemonWeightAdd"
                        android:hint="Weight"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>

            </LinearLayout>
            <EditText
                    android:background="@drawable/rounded_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/TxtPokemonAbilitiesAdd"
                    android:layout_below="@+id/linear1"
                    android:hint="@string/new_pokedex_abilities"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="20dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear2"
                    android:layout_below="@+id/TxtPokemonAbilitiesAdd"
                    android:gravity="center">
                <View
                        android:layout_centerHorizontal="true"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="@color/theline"
                        android:id="@+id/theline"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stats"
                        android:textColor="@color/theline"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                <View
                        android:layout_centerHorizontal="true"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="@color/theline"
                        android:id="@+id/theline2"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear3"
                    android:layout_below="@+id/linear2"
                    android:gravity="center">
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokemonHPAdd"
                        android:inputType="number"
                        android:hint="HP"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:id="@+id/TxtPokemonAttackAdd"
                        android:hint="Attack"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear4"
                    android:layout_below="@+id/linear3"
                    android:gravity="center">
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokemonDefenseAdd"
                        android:hint="Defense"
                        android:inputType="number"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokemonSpAttackAdd"
                        android:hint="Sp. Attack"
                        android:inputType="number"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear5"
                    android:layout_below="@+id/linear4"
                    android:gravity="center">
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/TxtPokemonSpDefenseAdd"
                        android:hint="Sp. Defense"
                        android:inputType="number"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
                <EditText
                        android:background="@drawable/rounded_edittext"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:id="@+id/TxtPokemonSpeedAdd"
                        android:hint="Speed"
                        android:layout_margin="15dp"
                        android:paddingLeft="20dp"/>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BtnAdd"
                    android:layout_below="@+id/linear5"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="15dp"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
            />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>