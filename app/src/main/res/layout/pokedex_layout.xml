<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/pokedex_card">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/TxtPokemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pokemon Name"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/threedots"
                android:id="@+id/pokedex_menu"
                android:padding="10dp"
                android:layout_alignParentRight="true"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/TxtPokemonName"
                android:id="@+id/PictPokemon"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:src="@drawable/pokeball"
                android:adjustViewBounds="true"

        />
        <TextView
                android:id="@+id/TxtPokedexNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pokedex number"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#757575"
                android:layout_below="@id/PictPokemon"
        />

        <!--<TextView-->
        <!--android:id="@+id/TxtType"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Type"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="15dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_below="@id/TxtPokedexNo"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--/>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/TxtPokedexNo"
                      android:gravity="center"
                      android:layout_marginTop="15dp"
                      android:layout_marginBottom="15dp"
                      android:layout_centerHorizontal="true">
            <Button
                    android:id="@+id/IconType1"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_normal"
                    android:text="Normal"
                    android:textColor="@color/md_white_1000"
                    android:layout_margin="5dp"
                    android:textSize="10sp"
            />
            <Button
                    android:id="@+id/IconType2"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_normal"
                    android:text="Normal"
                    android:textColor="@color/md_white_1000"
                    android:layout_margin="5dp"
                    android:textSize="10sp"

            />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>